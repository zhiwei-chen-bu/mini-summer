{
    "name": "FastAPI Development",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": ".."
    },
    "forwardPorts": [8000],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/app,type=bind"
    ],
    "postCreateCommand": "pip install -r requirements.txt",
    "workspaceFolder": "/app"
}